{% extends 'AppBundle:Marketing:landing.html.twig' %}

{% block inner_content -%}
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="container login-container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title center-text">EAU<br><span class="small">Login</span></span>
                        </h3>
                    </div>
                    <div class="panel-body">
                        {% block fos_user_content %}
                            {% if error %}
                                    <div class="alert alert-danger alert-dismissable"><i class="fa fa-warning"></i>&nbsp;&nbsp;&nbsp;{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                        {% endblock fos_user_content %}
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" required="required" />
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="password" id="password" name="_password" placeholder="Password" required="required" />
                                </div>


                                <input height="auto" class="btn center-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                                <a style="margin-top: 15px" href="{{ path('eve.register') }}" class="btn center-block">Register</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



