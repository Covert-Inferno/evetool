<eve-pane title="Deliveries">
    <div ng-controller="deliveryController" class="row">
        <div class="col-xs-12 well" ng-show="selected_corp" ng-cloak>
            <b class="text-info">Total In Deliveries:</b> {{ '{{ sumDeliveries() | currency }}' }}
            <table class="table data-table table-striped table-condensed">
                <thead>
                <th>
                </th>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Market Group
                </th>
                <th>
                    Unit Price
                </th>
                <th>
                    Total Price
                </th>
                </thead>
                <tbody>
                <tr ng-repeat="item in assets">
                    <td>
                        <eve-image image-type="'Type'" object-id="item.type_id" img-width="64"></eve-image>
                    </td>
                    <td>
                        {{ '{{ item.name }}' }}
                    </td>
                    <td>
                        {{ '{{ item.quantity }}' }}
                    </td>
                    <td></td>
                    <td>
                        {{ '{{ getPrice(item).average_price | currency }}' }}
                    </td>
                    <td>

                        {{ '{{ getPrice(item).average_price * item.quantity | currency }}' }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-12 well" ng-show="!selected_corp"><h5 class="text-center">Select a Corporation</h5></div>
    </div>
</eve-pane>
