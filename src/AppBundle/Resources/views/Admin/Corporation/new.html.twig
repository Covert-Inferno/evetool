<div class="push-menu">
    <div class="header">
        <h3>New Corporation</h3>
    </div>
    <p class="text-center">&nbsp;&nbsp;Please enter the required information.</p>
    <form name="newCorpForm">
        <table class="table-form">
            <tbody>
                <tr>
                    <td>
                        <i ng-class="{ 'text-danger fa fa-times': newCorpForm.api_key.$invalid, 'text-success fa fa-check': newCorpForm.api_key.$valid}"></i>
                    </td>
                    <td>
                        <div class="form-group">
                            <input name="api_key"
                                   type="text"
                                   ng-minlength="4"
                                   class="form-control"
                                   placeholder="API Key..."
                                   ng-required="true"
                                   ng-model="newCorp.api_key"
                            />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <i ng-class="{ 'text-danger fa fa-times': newCorpForm.verification_code.$invalid, 'text-success fa fa-check': newCorpForm.verification_code.$valid}"></i>
                    </td>
                    <td>
                        <div class="form-group">
                            <input name="verification_code"
                                   type="text"
                                   class="form-control"
                                   placeholder="Verification Code..."
                                   ng-required="true"
                                   ng-model="newCorp.verification_code"
                            />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <i ng-class="{ 'text-danger fa fa-times': newCorpForm.access_mask.$invalid, 'text-success fa fa-check': newCorpForm.access_mask.$valid}"></i>
                    </td>
                    <td>
                        <div class="form-group">
                            <input name="access_mask"
                                   type="text"
                                   class="form-control"
                                   ng-minlength="6"
                                   placeholder="Access Mask..."
                                   ng-required="true"
                                   ng-model="newCorp.access_mask"
                            />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button ladda="submitLoading" ng-disabled="!newCorpForm.$valid " class="btn btn-block" type="submit" ng-click="submit()">Submit</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
