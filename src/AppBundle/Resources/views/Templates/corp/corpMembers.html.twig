<div ng-controller="corpMembersController" class="row">
    <div class="col-xs-12 well" ng-show="selected_corp" ng-cloak>
        <div class="table-responsive">
            <table class="table data-table table-striped table-condensed">
                <thead>
                <th>
                    Name
                </th>
                <th>Associated Chars</th>
                <th>
                    Joined on
                </th>
                <th>
                    Time in corp
                </th>
                <th>Is Registered</th>
                </thead>
                <tbody>
                <tr ng-repeat="m in members | orderBy:'start_time':true">
                    <td >
                        <div class="row">
                            <div class="col-xs-4">
                                <eve-image image-type="'Character'" override-width="image_width" object-id="m.character_id" img-width="256"></eve-image>
                            </div>
                            <div class="col-xs-8">
                                {{ '{{ m.character_name }}' }}
                            </div>
                        </div>
                    </td>
                    <td>{{ '{{ getAssocChars(m)}}' }}</td>
                    <td>
                        {{ '{{ m.start_time | date:"longDate" }}' }}
                    </td>
                    <td>
                        {{ '{{ getTimeWith(m) }}' }} Days
                    </td>
                    <td>
                    <span ng-show="hasApiKey(m)" class="api-key small">
                        <button class="btn btn-sm btn-warning" ng-click="viewKey()">View</button>
                    </span>
                    <span ng-show="!hasApiKey(m)" >
                        <div class="label label-danger">
                            NO API KEY
                        </div>
                    </span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xs-12 well" ng-show="!selected_corp" ng-cloak><h5 class="text-center">Select a Corporation</h5></div>
</div>
